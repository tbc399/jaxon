package templates

import "jaxon.app/jaxon/internal/auth/otp"
import "fmt"
import "jaxon.app/jaxon/internal/templates"

templ LoginValidation(otpass *otp.OneTimePass) {
    <html class="h-full">
      @templates.Header("Login Validation")
      <body class="dark:bg-slate-950 bg-gray-100 flex h-full py-16">
        <main class="w-full max-w-md mx-auto p-6">
          <div class="mt-7 bg-white border-gray-200 rounded-xl shadow-sm dark:bg-slate-950">
            <div class="p-4 sm:p-7">
              <div class="text-center">
                <div class="flex justify-center mb-5">
                  <svg xmlns="http://www.w3.org/2000/svg" 
                    width="48" 
                    height="48" 
                    viewBox="0 0 24 24" 
                    fill="none" 
                    stroke="currentColor" 
                    stroke-width="2" 
                    stroke-linecap="round" 
                    stroke-linejoin="round" 
                    class="lucide lucide-key-round dark:text-teal-700">
                    <path d="M2 18v3c0 .6.4 1 1 1h4v-3h3v-3h2l1.4-1.4a6.5 6.5 0 1 0-4-4Z"/>
                    <circle cx="16.5" cy="7.5" r=".5" fill="currentColor"/>
                  </svg>
                </div>
                <form action={ templ.URL(fmt.Sprintf("/auth/login/magic/%s", otpass.MagicToken)) } method="POST">
                  <div class="flex space-x-3 justify-center" data-hs-pin-input="">
                    <input name="digit_1" type="text" class="block w-[48px] text-center border-gray-200 rounded-md text-2xl focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900/50 dark:border-slate-800 dark:text-slate-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" data-hs-pin-input-item="" autofocus="">
                    <input name="digit_2" type="text" class="block w-[48px] text-center border-gray-200 rounded-md text-2xl focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900/50 dark:border-slate-800 dark:text-slate-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" data-hs-pin-input-item="">
                    <input name="digit_3" type="text" class="block w-[48px] text-center border-gray-200 rounded-md text-2xl focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900/50 dark:border-slate-800 dark:text-slate-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" data-hs-pin-input-item="">
                    <input name="digit_4" type="text" class="block w-[48px] text-center border-gray-200 rounded-md text-2xl focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900/50 dark:border-slate-800 dark:text-slate-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" data-hs-pin-input-item="">
                  </div>
                  <div class="mt-3">
                    <button type="submit" class="p-2 border-1 dark:bg-teal-700 rounded-lg dark:text-slate-300">submit</button>
                  </div>
                </form>
                <p class="my-3 text-sm text-gray-600 dark:text-gray-400">
                  Enter your one time passcode here.
                </p>
              </div>
            </div>
          </div>
        </main>
      </body>
    </html>
}
